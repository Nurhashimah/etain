- provide(:title, 'Course Details')
- model_class = Course
.page-header
  %h1= Course Details
%p#notice= notice

%dl.dl-horizontal
  %dt= Code:
  %dd= @course.code

%dl.dl-horizontal
  %dt= Category:
  %dd= @course.category

%dl.dl-horizontal
  %dt= Topic:
  %dd= @course.topic

%dl.dl-horizontal
  %dt= Description:
  %dd= @course.description

%dl.dl-horizontal
  %dt= Fee:
  %dd= @course.fee

%dl.dl-horizontal
  %dt= Duration:
  %dd= @course.duration

%dl.dl-horizontal
  %dt= Duration type:
  %dd= @course.duration_type

%dl.dl-horizontal
  %dt= User:
  %dd= @course.user_id

%dl.dl-horizontal
  %dt= College:
  %dd= @course.college_id

%dl.dl-horizontal
  %dt= Data:
  %dd= @course.data


.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), courses_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_course_path(@course), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    course_path(@course),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |

