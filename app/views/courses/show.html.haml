- provide(:title, 'Course Details')
- model_class = Course
.page-header
  %h1= t('activerecord.attributes.course.title')
%p#notice= notice

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.code')+":"
  %dd= @course.code

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.category')+":"
  %dd= @course.category

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.topic')+":"
  %dd= @course.topic

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.description')+":"
  %dd= @course.description

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.fee')+":"
  %dd= @course.fee

%dl.dl-horizontal
  %dt= t('activerecord.attributes.course.duration')+":"
  %dd
    = @course.duration.to_s+" "+@course.duration_details

