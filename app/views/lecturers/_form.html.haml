.container{:style => "padding-left: 60px;"}
  = form_for @lecturer, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label (t 'lecturers.name'), :class => 'control-label'
      .controls= f.text_field :name, :class => 'text_field input-xxlarge'

    .control-group
      = f.label (t 'lecturers.mykadno'), :class => 'control-label'
      .controls
        = f.text_field :mykadno, :class => 'text_field'
        .small Sample: 900102015500
    .control-group
      = f.label (t 'lecturers.rate'), :class => 'control-label'
      .controls= f.text_field :rate, :class => 'text_field'  

    .control-group
      = f.label (t 'lecturers.position'), :class => 'control-label'
      .controls= f.text_field :position, :class => 'text_field'
    .control-group
      = f.label (t 'lecturers.address'), :class => 'control-label'
      .controls= f.text_area :address, :class => 'text_field input-xxlarge' 

    .control-group
      = f.label (t 'lecturers.qualifications'), :class => 'control-label'
      .controls= f.text_area :qualifications, :class => 'text_field input-xxlarge' 

    .control-group
      = f.label (t 'lecturers.experiences'), :class => 'control-label'
      .controls= f.text_area :experiences, :class => 'text_field input-xxlarge' 

    .control-group
      = f.label (t 'helpers.user_id'), :class => 'control-label'
      .controls= f.number_field :user_id, :class => 'text_field', :readonly => 'readonly'

    .control-group
      = f.label (t 'helpers.college_id'), :class => 'control-label'
      .controls= f.number_field :college_id, :class => 'text_field', :readonly => 'readonly'

    .control-group
      = f.label (t 'helpers.data'), :class => 'control-label'
      .controls= f.text_field :data, :class => 'text_field', :readonly => 'readonly'



    .form-actions
      = f.submit (t 'helpers.links.submit'), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        lecturers_path, :class => 'btn'
