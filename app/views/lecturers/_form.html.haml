.container{:style => "padding-left: 60px;"}
  = form_for @lecturer, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    .control-group
      = f.label :name, :class => 'control-label'
      .controls= f.text_field :name, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :details, :class => 'control-label'
      .controls= f.text_field :details, :class => 'text_field input-xxlarge'

    .control-group
      = f.label :rate, :class => 'control-label'
      .controls= f.text_field :rate, :class => 'text_field'  

    .control-group
      = f.label :user_id, :class => 'control-label'
      .controls= f.number_field :user_id, :class => 'text_field'

    .control-group
      = f.label :college_id, :class => 'control-label'
      .controls= f.number_field :college_id, :class => 'text_field'

    .control-group
      = f.label :data, :class => 'control-label'
      .controls= f.text_field :data, :class => 'text_field'



    .form-actions
      = f.submit (t 'helpers.links.submit'), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        lecturers_path, :class => 'btn'
