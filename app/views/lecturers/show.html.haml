- provide(:title, 'Lecturer Details')
- model_class = Lecturer
.page-header
  %h1=t 'activerecord.attributes.lecturer.title'
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'activerecord.attributes.lecturer.name'
  %dd= @lecturer.name

%dl.dl-horizontal
  %dt= (t 'activerecord.attributes.lecturer.mykadno')+":"
  %dd= @lecturer.mykadno

%dl.dl-horizontal
  %dt= (t 'activerecord.attributes.lecturer.rate')+":"
  %dd= @lecturer.rate.nil? ? "-" : "RM "+(sprintf("%.2f", @lecturer.rate)).to_s

%dl.dl-horizontal
  %dt=(t 'activerecord.attributes.lecturer.position')+":"
  %dd= @lecturer.position

%dl.dl-horizontal
  %dt= (t 'activerecord.attributes.lecturer.address')+":"
  %dd= @lecturer.address

%dl.dl-horizontal
  %dt= (t 'activerecord.attributes.lecturer.qualifications')+":"
  %dd= @lecturer.qualifications

%dl.dl-horizontal
  %dt= (t 'activerecord.attributes.lecturer.experiences')+":"
  %dd= @lecturer.experiences

/%dl.dl-horizontal
/  %dt= t 'helpers.user_id'+":"
/  %dd= @lecturer.user_id

/%dl.dl-horizontal
/  %dt= t 'helpers.college_id'+":"
/  %dd= @lecturer.college_id

/%dl.dl-horizontal
/  %dt= t 'helpers.data'+":"
/  %dd= @lecturer.data

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), lecturers_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_lecturer_path(@lecturer), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    lecturer_path(@lecturer),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |

