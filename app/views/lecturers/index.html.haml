- provide(:title, 'Lecturers')
- model_class = Lecturer
.page-header
  %h1 Lecturer


.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon(" ", text: (t 'actions.new'))), new_lecturer_path
    %ul.nav.pull-right
      %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#"


%table.table.table-condensed.table-hover.table-striped
  %thead
    %tr
      %th Name
      %th Details
      %th Rate
      %th User
      %th College
      %th Data
      %th
  %tbody
    - @lecturers.each do |lecturer|
      %tr
        %td= lecturer.name
        %td= lecturer.details
        %td= lecturer.rate
        %td= lecturer.user_id
        %td= lecturer.college_id
        %td= lecturer.data
        = render :partial => 'action_menu', :locals => { :lecturer => lecturer }

