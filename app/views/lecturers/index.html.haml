- provide(:title, 'Lecturers')
- model_class = Lecturer
.page-header
  %h1=t 'lecturers.list'


.navbar.navbar-inverse
  .navbar-inner
    %ul.nav
      %li= link_to content_tag(:li, fa_icon(" ", text: (t 'actions.new'))), new_lecturer_path
    %ul.nav.pull-right
      %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#"


%table.table.table-condensed.table-hover.table-striped
  %thead
    %tr
      %th=t 'lecturers.name'
      %th=t 'lecturers.mykadno'
      %th=t 'lecturers.rate'
      %th=t 'lecturers.position'
      /%th=t 'lecturers.address'
      %th=t 'lecturers.qualifications'
      /%th=t 'lecturers.experiences'
      /%th User
      /%th College
      /%th Data
      %th
  %tbody
    - @lecturers.each do |lecturer|
      %tr
        %td= lecturer.name
        %td= lecturer.mykadno
        %td= lecturer.rate
        %td= lecturer.position
        /%td= lecturer.address
        %td= lecturer.qualifications
        /%td= lecturer.experiences
        /%td= lecturer.user_id
        /%td= lecturer.college_id
        /%td= lecturer.data
        = render :partial => 'action_menu', :locals => { :lecturer => lecturer }

