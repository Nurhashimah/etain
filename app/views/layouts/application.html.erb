<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <%= javascript_include_tag :defaults %>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<title>Skeleton App : <%= @pagetitle || (@page && @page.title) || t ('skeleton') %></title>
		<%= stylesheet_link_tag 'web', :media => :screen %>
		<%= stylesheet_link_tag 'print', :media => :print %>
		
</head>
<body>
	<div id='pagewrapper'>
	  <div id="top-menu">
			<div id="account">
				<% if logged_in? %>
			  	Welcome <%= User.current_user.login %> &nbsp
					<%= link_to "Log Out", logout_path %>
				<% else %>
					<%= link_to "Log In", login_path %>or <%= link_to "Sign Up", signup_path %>
				<% end %>
		  </div>
	  </div>
	<div id='header'>
		<p>Skeleton App</p>
		
		<% form_tag '', :method => 'GET', :class => 'locale' do %>
		 <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit()' %>
		 <%= submit_tag 'submit' %>
		 <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
    <% end %>
		<div id='notifications'>
		</div>
	</div>
	<div id='navbar'>
		<ul>
			<li><%= link_to t('home'),  {:controller => 'pages', :action => 'home'} %></li>
			<li><%= link_to 'About', {:controller => 'pages', :action => 'about'} %></li>
			<li><%= link_to 'app map',  {:controller => 'pages', :action => 'sitemap'} %></li>
			<li><%= link_to 'admin',  {:controller => 'pages', :action => 'admin'} %></li>
		</ul>
		
	</div>
	
	<div id='content'>
		<%= flash[:notice] %>
		<%= flash[:error] %>
	  <%= yield %>
  </div>
	
	<div id='footer'>
	  <p>Skeleton App v1.00.000 Â© Integrated Computing Technologies Sdn Bhd</p>
  </div>
	</div>
</body>

</html>
