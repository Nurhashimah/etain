<h1>Listing attendances</h1>

<table>
  <thead>
    <tr>
      <th>Schedule</th>
      <th>Customer</th>
      <th>Attended</th>
      <th>Taken on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.schedule_id %></td>
        <td><%= attendance.customer_id %></td>
        <td><%= attendance.attended %></td>
        <td><%= attendance.taken_on %></td>
        <td><%= link_to 'Show', attendance %></td>
        <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
        <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attendance', new_attendance_path %>
