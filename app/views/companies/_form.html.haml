.container{:style => "padding-left: 60px;"}
  = form_for @company, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object


    .control-group
      = f.label (t 'activerecord.attributes.company.company_code'), :class => 'control-label'
      .controls= f.text_field :company_code, :class => 'text_field '

    .control-group
      = f.label (t 'activerecord.attributes.company.name'), :class => 'control-label'
      .controls= f.text_field :name, :class => 'text_field mandatory'
    .control-group
      = f.label (t 'activerecord.attributes.company.address'), :class => 'control-label'
      .controls= f.text_field :address, :class => 'text_field '
    .control-group
      = f.label (t 'activerecord.attributes.company.phone'), :class => 'control-label'
      .controls= f.text_field :phone, :class => 'text_field '
    .control-group
      = f.label (t 'activerecord.attributes.company.fax'), :class => 'control-label'
      .controls= f.text_field :fax, :class => 'text_field '
    .control-group
      = f.label (t 'activerecord.attributes.company.email'), :class => 'control-label'
      .controls= f.text_field :email, :class => 'text_field '
    .control-group
      = f.label (t 'helpers.user_id'), :class => 'control-label'
      .controls= f.number_field :user_id, :class => 'text_field', :readonly => 'readonly'
    .control-group
      = f.label (t 'helpers.college_id'), :class => 'control-label'
      .controls= f.number_field :college_id, :class => 'text_field', :readonly => 'readonly'
    .control-group
      = f.label (t 'helpers.data'), :class => 'control-label'
      .controls= f.text_field :data, :class => 'text_field', :readonly => 'readonly'

    .form-actions
      = f.submit (t 'helpers.links.submit'), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        companies_path, :class => 'btn'
