= search_form_for @search, url: companies_path, class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td= f.text_field :company_code_cont, :class => "form-control"
    %td= f.text_field :name_cont, :class => "form-control"
    %td= f.text_field :address_cont,:class => "form-control"
    %td= f.text_field :phone_cont,:class => "form-control"
    %td= f.text_field :fax_cont,:class => "form-control"
    %td
      .input-group
        = f.text_field :email_cont, :class => "form-control"
        %span.input-group-btn
          %button.btn.btn-sm.btn-default.right{:type => "submit"}
            %i.fa.fa-search.fa-fw
    %td &nbsp;