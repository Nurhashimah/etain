- provide(:title, 'Company Details')
- model_class = Company
.page-header
  %h1= t('companies.title')
%p#notice= notice

%dl.dl-horizontal
  %dt= t('companies.company_code')+":"
  %dd= @company.company_code

%dl.dl-horizontal
  %dt= t('companies.name')+":"
  %dd= @company.name

%dl.dl-horizontal
  %dt= t('companies.address')+":"
  %dd= @company.address

%dl.dl-horizontal
  %dt= t('companies.phone')+":"
  %dd= @company.phone

%dl.dl-horizontal
  %dt= t('companies.fax')+":"
  %dd= @company.fax

%dl.dl-horizontal
  %dt= t('companies.email')+":"
  %dd= @company.email

