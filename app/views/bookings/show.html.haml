- provide(:title, 'Booking Details')
- model_class = Booking
.page-header
  %h1= t('activerecord.attributes.booking.title')
%p#notice= notice

%dl.dl-horizontal
  %dt= t('activerecord.attributes.booking.code')+":"
  %dd= @booking.code

%dl.dl-horizontal
  %dt= t('activerecord.attributes.booking.schedule_id')+":"
  %dd= @booking.schedule.schedule_course_details

%dl.dl-horizontal
  %dt= t('activerecord.attributes.booking.customer_id')+":"
  %dd= @booking.participant.id_no_with_name_position

%dl.dl-horizontal
  %dt= t('activerecord.attributes.booking.warranty_id')+":"
  %dd= @booking.warranty_id

%dl.dl-horizontal
  %dt Status:
  %dd= @booking.status

/%dl.dl-horizontal
/  %dt= t('helpers.user_id')+":"
/  %dd= @booking.user_id

/%dl.dl-horizontal
/  %dt= t('helpers.college')+":"
/  %dd= @booking.college_id

/%dl.dl-horizontal
/  %dt= t('helpers.data')+":"
/  %dd= @booking.data


.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), bookings_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_booking_path(@booking), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    booking_path(@booking),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |

