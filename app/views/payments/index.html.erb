<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>Customer</th>
      <th>Method</th>
      <th>Auth code</th>
      <th>Amount</th>
      <th>Confirmed by</th>
      <th>Confirmed on</th>
      <th>Status</th>
      <th>User</th>
      <th>College</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.booking_id %></td>
        <td><%= payment.customer_id %></td>
        <td><%= payment.method %></td>
        <td><%= payment.auth_code %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.confirmed_by %></td>
        <td><%= payment.confirmed_on %></td>
        <td><%= payment.status %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.college_id %></td>
        <td><%= payment.data %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
