/  %dt= t('helpers.user_id')+":"
/  %dd= @customer.user_id

/%dl.dl-horizontal
/  %dt= t('helpers.college')+":"
/  %dd= @customer.college_id

/%dl.dl-horizontal
/  %dt= t('helpers.data')+":"
/  %dd= @customer.data


.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), customers_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_customer_path(@customer), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    customer_path(@customer),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |

