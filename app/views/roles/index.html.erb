<div class="box">
	<div class="box-head">
		<h2 class="left">Roles</h2>
		<div class="right">
		</div>
	</div>
</div>

<div class="indexlist">
<% link_to 'Create New role', new_role_path %>
<table>
  <tr>
    <th><%= link_to image_tag("add.png", :border => 0, :title => 'Create'), new_role_path %> Roles </th>
    <th colspan=3>Control</th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%=h role.name %></td>
		<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => role %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => role %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), role, :confirm => 'Are you sure?', :method => :delete %>
  </tr>
<% end %>
</table>

<br />



</div>