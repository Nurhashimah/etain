.container{:style => "padding-left: 60px;"}
  = form_for @schedule, :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object


    .control-group
      = f.label :course_id, :class => 'control-label'
      .controls= f.collection_select :course_id, Course.all, :id, :code, :include_blank => (t 'helpers.prompt.select_issuer'), :html_options => {:class => 'selectpicker'}

    .control-group
      = f.label :scheduled_on, :class => 'control-label'
      .controls= f.datetime_select :scheduled_on, :class => 'text_field'
    .control-group
      = f.label :location_id, :class => 'control-label'
      .controls= f.number_field :location_id, :class => 'text_field'
    .control-group
      = f.label :lecturer_by, :class => 'control-label'
      .controls= f.text_field :lecturer_by, :class => 'text_field'
    .control-group
      = f.label :max_people, :class => 'control-label'
      .controls= f.number_field :max_people, :class => 'text_field'
    .control-group
      = f.label :status, :class => 'control-label'
      .controls= f.text_field :status, :class => 'text_field'
    .control-group
      = f.label :user_id, :class => 'control-label'
      .controls= f.number_field :user_id, :class => 'text_field'
    .control-group
      = f.label :college_id, :class => 'control-label'
      .controls= f.number_field :college_id, :class => 'text_field'
    .control-group
      = f.label :data, :class => 'control-label'
      .controls= f.text_field :data, :class => 'text_field'


    .form-actions
      = f.submit (t 'helpers.links.submit'), :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        schedules_path, :class => 'btn'
