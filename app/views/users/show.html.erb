<div class='formtable'>

<table>
	<tr>
		<th colspan=2>Show User Details</th>
	</tr>
	<tr>
		<td class='leftcol'>Name:</td>
		<td><%=h @user.name %></td>
	</tr>
	<tr>
		<td class='leftcol'>Login:</td>
		<td><%=h @user.login %></td>
	</tr>
	<tr>
		<td class='leftcol'>Email:</td>
		<td><%=h @user.email %></td>
	</tr>
	<tr>
		<td class='leftcol'>Password:</td>
		<td>[secret]</td>
	</tr>
	<tr>
		<td class='leftcol'>User Roles:</td>
		<td><% for role in @user.roles %><%=h role.name %>, <% end %></td>
	</tr>
</table>
  <BR>


	<%= link_to 'Edit', edit_user_path(@user) %> |
	<%= link_to 'Back', users_path %>
	
</div>